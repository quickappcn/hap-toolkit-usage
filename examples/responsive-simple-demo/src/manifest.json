{
  "package": "com.application.demo",
  "name": "responsive-simple-demo",
  "versionName": "1.0.0",
  "versionCode": "1",
  "minPlatformVersion": "1020",
  "icon": "/Common/logo.png",
  "features": [
    { "name": "system.prompt" },
    { "name": "system.router" },
    { "name": "system.shortcut" },
    { "name": "system.fetch" },
    { "name": "service.vui" }
  ],
  "permissions": [
    { "origin": "*" }
  ],
  "config": {
    "designWidth": 750,
    "logLevel": "log"
  },
  "router": {
    "entry": "Tabs/landscape",
    "pages": {
      "Tabs/portrait": {
        "component": "index"
      },
      "Tabs/landscape": {
        "component": "index"
      },
      "Tabs/landscape/detail": {
        "component": "index"
      }
    }
  },
  "display": {
    "titleBarBackgroundColor": "#f2f2f2",
    "titleBarTextColor": "#414141",
    "titleBar": false,
    "menu": true,
    "pages": {
      "Tabs/portrait": {
        "titleBarText": "Tabs页签横竖屏适配示例",
        "orientation": "portrait"
      },
      "Tabs/landscape": {
        "titleBarText": "Tabs页签横竖屏适配示例",
        "orientation": "landscape"
      },
      "Tabs/landscape/detail": {
        "titleBarText": "Tabs页签横竖屏适配示例详情页",
        "orientation": "landscape"
      }
    }
  }
}